<div class="row m-0 d-flex pb-5">
    <div class="image mr-2 d-flex align-items-center justify-content-center">
        <% if @image = @reference_user.image %>
            <img src="<%= @image %>">
        <% else %>
            <i class="fas fa-user fa-custom"></i>
        <% end %>
    </div>
    <div>
        <%= @reference_user.display_formatted_name %>
    </div>
</div>



<% if @posts %>
    <div>
        <p>Posts</p>
        <% @posts.each do |p| %>
            <%= display_post_tag(p, @vote, p.user) %>
        <% end %>
    </div>
<% end %>

<style>
    .image {
        width: 100px;
        height: 100px;
    }

    img {
        width: 100%;
        height: 100%;
    }

    .fa-custom {
        transform: scale(5, 5);
    }
</style>