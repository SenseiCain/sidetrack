<div id="main" class="row justify-content-between">
    <div class="col-md-9">
        <% @posts[1..4].each do |p| %>
            <%= display_post_tag(p) %>
        <% end %>
    </div>
    <div class="col-md-2 border px-0">
            <div class='row bg-info mx-0 px-0 py-2'>
                    <%= link_to('Create a new post', new_post_path, class: 'col text-center text-white') %>
            </div>
    </div>
</div>